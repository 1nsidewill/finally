{
    "version": "0.0.1",
    "configurations": [
      {
        "name": "API:DEV",
        "type": "debugpy",
        "request": "launch",
        "module": "fastapi",
        "cwd": "${workspaceFolder}/src/", # Edit path where main.py
        "args": [
          "dev" # Dev mode
        ],
        "justMyCode": false,
        "env": {
          "ENVIRONMENT": "dev"
        }
      },    
      {
        "name": "API:PROD",
        "type": "debugpy",
        "request": "launch",
        "module": "fastapi",
        "cwd": "${workspaceFolder}/src/",  # Edit path where main.py
        "args": [
          "run" # Prod mode
        ],
        "justMyCode": false,
        "env": {
          "ENVIRONMENT": "prod"
        }
      }, 
    ]
  }
  